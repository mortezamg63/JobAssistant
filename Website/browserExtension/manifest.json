{
  "manifest_version": 3,
  "name": "Smart Job Saver",
  "version": "1.0",
  "description": "A floating, user-friendly job saver panel that remains on the page until closed.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Toggle Job Saver Panel"
  }
}
